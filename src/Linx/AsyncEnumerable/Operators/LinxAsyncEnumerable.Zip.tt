                        case _sPushing:
                            Debug.Assert(_active > 0);
                            _eh.SetExternalError(error);
                            var m = _tpsPushingMask;
                            _tpsPushingMask = 0;
                            _state = state == _sPulling ? _sCancelingPulling : _sCanceling;
                            _eh.Cancel();
