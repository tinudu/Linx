<?xml version="1.0" encoding="utf-8" ?>
<JsxnSchema xmlns="urn:Linx.Jsxn/JsxnSchemaV1.xsd">
  <Enum name="MammalFamily">
    <Value>Felidae</Value>
    <Value>Murids</Value>
  </Enum>

  <Interface name="IAnimal">
    <Property name="NumberOfLegs" type="int"/>
  </Interface>
  <Interface name="IMammal">
    <Implements>IAnimal</Implements>
    <Property name="Family" type="MammalFamily"/>
  </Interface>
  <Interface name="ICarnivore">
    <Implements>IAnimal</Implements>
    <Property name="Food" type="IAnimal"/>
  </Interface>
  <Interface name="IPet">
    <Implements>IAnimal</Implements>
    <Property name="Name" type="string"/>
  </Interface>
  <Object name="Cat">
    <Implements>IPet</Implements>
    <Implements>ICarnivore</Implements>
    <Property name="NumberOfLegs" type="int" isCalculated="true"/>
    <Property name="Name" type="string"/>
    <Property name="Food" type="Mouse"/>
  </Object>
  <Object name="Centipede">
    <Implements>IAnimal</Implements>
    <Property name="NumberOfLegs" type="int"/>
  </Object>
  <Object name="Mouse">
    <Implements>IPet</Implements>
    <Property name="NumberOfLegs" type="int" isCalculated="true"/>
    <Property name="Name" type="string"/>
  </Object>

  <Object name="Adult" extends="Person">
    <Property name="Children" type="Person[]"/>
  </Object>
  <Object name="Child" extends="Person">
    <Property name="Parent" type="Adult"/>
    <Property name="FavouritePet" type="IPet"/>
  </Object>
  <Object name="Person" modifier="Abstract">
    <Property name="Name" type="string"/>
    <Property name="FavouritePet" type="IPet?"/>
  </Object>

</JsxnSchema>
